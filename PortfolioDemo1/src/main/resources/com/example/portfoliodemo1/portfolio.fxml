                    <Label fx:id="titleLabel2" style="-fx-font-weight: bold;" />
                    <Label fx:id="descriptionLabel2" wrapText="true" />
                </VBox>
            </HBox>

            <!-- Portfolio Item 3 -->
            <HBox fx:id="portfolioItem3" spacing="10">
                <ImageView fx:id="imageView3" fitHeight="200.0" fitWidth="200.0" />
                <VBox spacing="10">
                    <Label fx:id="titleLabel3" style="-fx-font-weight: bold;" />
                    <Label fx:id="descriptionLabel3" wrapText="true" />
                </VBox>
            </HBox>
        </VBox>
    </content>
</ScrollPane>